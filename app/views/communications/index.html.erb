<p id="notice"><%= notice %></p>

<h1>Comunicados</h1>

<% if current_user.user_type_id == 1 || current_user.user_type_id == 2 %>
  <%= link_to 'Nuevo comunicado', new_communication_path, class:"btn btn-success mb-3", remote: true %>
<% end %>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th class="align-middle text-center">Numero</th>
      <th class="align-middle text-center">Titulo</th>
      <th class="align-middle text-center">Fecha</th>
      <th class="align-middle text-center">Estado</th>
      <th class="align-middle text-center">Documento</th>
      <% if current_user.user_type_id == 1 %>
        <th class="align-middle text-center">Edificio</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="communications">
    <%= render @communications %>
  </tbody>
</table>

<br>

<!-- Edit com Modal -->
<div class="modal fade" id="edit_com_modal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="edit_com_modal_title" class="modal-title" id="staticBackdropLabel">Nuevo Comunicado</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="edit_com_modal_body" class="modal-body">
      
      </div>
    </div>
  </div>
</div>

<!-- Show com Modal -->
<div class="modal fade" id="show_communication" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="show_communication_title" class="modal-title" ></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="show_communication_body" class="modal-body">
      
      </div>
    </div>
  </div>
</div>