<p id="notice"><%= notice %></p>

<h1>Concepts</h1>

<%= link_to 'New Concept', new_concept_path, class:"btn btn-success mb-3" %>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Concepto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concepts.each do |concept| %>
      <tr>
        <td><%= concept.name %></td>
        <td><%= link_to 'Edit', edit_concept_path(concept), class:'btn btn-outline-info btn-sm' %></td>
        <td><%= link_to 'Destroy', concept, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

