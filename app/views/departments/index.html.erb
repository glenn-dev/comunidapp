<p id="notice"><%= notice %></p>

<h1>Departments</h1>

<table>
  <thead>
    <tr>
      <th>Num dep</th>
      <th>Floor</th>
      <th>Defaulting</th>
      <th>Habitability</th>
      <th>Collection</th>
      <th>Building</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.num_dep %></td>
        <td><%= department.floor %></td>
        <td><%= department.defaulting %></td>
        <td><%= department.habitability %></td>
        <td><%= department.collection %></td>
        <td><%= department.building %></td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

