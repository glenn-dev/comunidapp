<p id="notice"><%= notice %></p>

<h1>Communications</h1>

<table>
  <thead>
    <tr>
      <th>Num release</th>
      <th>Title</th>
      <th>Content</th>
      <th>Status</th>
      <th>Document</th>
      <th>Building</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @communications.each do |communication| %>
      <tr>
        <td><%= communication.num_release %></td>
        <td><%= communication.title %></td>
        <td><%= communication.content %></td>
        <td><%= communication.status %></td>
        <% if communication.release_doc.attached? %>
        <td><%= communication.release_doc %></td>
        <% else %>
        <td>No existe documento</td>
        <% end %>
        <td><%= communication.building %></td>
        <td><%= link_to 'Show', communication %></td>
        <td><%= link_to 'Edit', edit_communication_path(communication) %></td>
        <td><%= link_to 'Destroy', communication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Communication', new_communication_path %>
