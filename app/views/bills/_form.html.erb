<!-- Bill form -->
<%= form_for @bill do |f| %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">Num. Boleta</span>
          </div>
          <%= f.text_field :num_bill, class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">Departamento</span>
          </div>
          <%= f.select(:department_id, options_for_select(@department_array), prompt: 'Departamento') %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">Fecha</span>
          </div>
          <%= f.date_select :issue_date %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :status, "Estado" %>
        <%= f.check_box :status %>
      </div>
    </div>

    <div class="col-md-4 ml-4">
      <div class="form-group">
        <%= f.label :bill_doc, "Boleta" %>
        <br>
        <%= f.file_field :bill_doc %>
      </div>
    
      <div class="form-group">
        <%= f.label :voucher_doc, "Voucher de Pago" %>
        <br>
        <%= f.file_field :voucher_doc %>
      </div>
    </div>

  </div>
  
  

  <!-- Expenses details form -->
  <%= f.fields_for :expenses_detail do |p| %>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">Monto</th>
        <th scope="col">Concepto</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <td>
        <div class="form-group">
          <%= p.text_field :amount %>
        </div>
      </td>
      <td>
        <div class="form-group">
          <%= p.select(:concept, options_for_select(@concept_array), prompt: 'Seleccione concepto') %>
        </div>
      </td>
      <td>
        <span style="font-size: 48px; color: Dodgerblue;">
          <i class="far fa-plus-square fa-2x btn"></i>
        </span>
      </td>
    </tbody>
  </table>

  <% end %>

  <%= f.submit %>

<% end %>