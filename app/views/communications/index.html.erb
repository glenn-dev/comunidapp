<p id="notice"><%= notice %></p>

<h1>Comunicados</h1>

<%= link_to 'Nuevo comunicado', new_communication_path, class:"btn btn-success mb-3" %>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th class="align-middle text-center">Numero</th>
      <th class="align-middle text-center">Titulo</th>
      <th class="align-middle text-center">Fecha</th>
      <th class="align-middle text-center">Estado</th>
      <th class="align-middle text-center">Documento</th>
      <th class="align-middle text-center">Edificio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @communications.each do |communication| %>
      <tr>
        <td class="align-middle text-center"><%= link_to "#{communication.num_release}", communication, class:'btn btn-outline-primary btn-sm btn-block' %></td>
        <td class="align-middle text-center"><%= communication.title %></td>
        <td class="align-middle text-center"><%= communication.created_at %>
        <% if communication.status %>
          <td class="align-middle text-center">Vigente</td>
        <% else %>
          <td class="align-middle text-center">No vigente</td>
        <% end %>
        <% if communication.release_doc.attached? %>
          <td class="align-middle text-center"><%= image_tag communication.release_doc, class:'index_img img-thumbnail' %></td>
        <% else %>
          <td class="align-middle text-center"><i class="far fa-file-alt img-thumbnail fa-2x"></i></td>
        <% end %>
        <td class="align-middle text-center"><%= communication.building.name %></td>
        <td class="align-middle"><%= link_to 'Edit', edit_communication_path(communication), class:'btn btn-outline-info btn-sm' %></td>
        <td class="align-middle"><%= link_to 'Destroy', communication, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
