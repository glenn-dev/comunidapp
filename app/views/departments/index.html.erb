<p id="notice"><%= notice %></p>

<h1>Departamentos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Numero</th>
      <th>Deuda</th>
      <th>Habitabilidad</th>
      <th>Recaudacion</th>
      <th>Edificio</th>
      <th>Piso</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td class="align-middle"><%= link_to "#{department.num_dep}", department, class:'btn btn-outline-primary btn-sm btn-block' %></td>
        <% if department.defaulting %>
          <td class="align-middle"><%= link_to "Ver boleta", @bills, class:'btn btn-outline-danger btn-sm btn-block' %></td>
        <% else %>
          <td class="align-middle">Solvente</td>
        <% end %>
        <% if department.habitability %>
          <td class="align-middle">Habitable</td>
        <% else %>
          <td class="align-middle">No disponible</td>
        <% end %>
        <td class="align-middle"><%= department.collection %></td>
        <td class="align-middle"><%= department.building.name %></td>
        <td class="align-middle"><%= department.floor %></td>
        <td class="align-middle"><%= link_to 'Edit', edit_department_path(department), class:'btn btn-outline-info btn-sm' %></td>
        <td class="align-middle"><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo departamento', new_department_path, class:"btn btn-success" %>
