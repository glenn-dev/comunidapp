<p id="notice"><%= notice %></p>

<h1>General Expenses</h1>

<%= link_to 'New General Expense', new_general_expense_path, class:"btn btn-success mb-3" %>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Monto</th>
      <th>Concepto</th>
      <th>Edificio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @general_expenses.each do |general_expense| %>
      <tr>
        <td class="align-middle"><%= general_expense.amount %></td>
        <td class="align-middle"><%= general_expense.concept.name %></td>
        <td class="align-middle"><%= general_expense.building.name %></td>
        <td class="align-middle"><%= link_to 'Edit', edit_general_expense_path(general_expense), class:'btn btn-outline-info btn-sm' %></td>
        <td class="align-middle"><%= link_to 'Destroy', general_expense, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

