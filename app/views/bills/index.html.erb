<p id="notice"><%= notice %></p>

<h1>Bills</h1>

<table class="table">
  <thead>
    <tr>
      <th>Num bill</th>
      <th>Total</th>
      <th>Issue date</th>
      <th>Status</th>
      <th>Bill doc</th>
      <th>Paid doc</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.num_bill %></td>
        <td><%= bill.total %></td>
        <td><%= bill.issue_date %></td>
        <td><%= bill.status %></td>
        <% if bill.bill_doc.attached? %>
          <td><%= image_tag bill.bill_doc %></td>
        <% else %>
          <td>No existe documento</td>
        <% end %>
        <% if bill.voucher_doc.attached? %>
          <td><%= image_tag bill.voucher_doc %></td>
        <% else %>
          <td>No existe documento</td>
        <% end %>
        <td><%= bill.department %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

