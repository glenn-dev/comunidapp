<p id="notice"><%= notice %></p>

<h1>Comunicados</h1>

<% if current_user.user_type_id == 1 || current_user.user_type_id == 2 %>
  <%= link_to 'Nuevo comunicado', new_communication_path, class:"btn btn-success mb-3" %>
<% end %>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th class="align-middle text-center">Numero</th>
      <th class="align-middle text-center">Titulo</th>
      <th class="align-middle text-center">Fecha</th>
      <th class="align-middle text-center">Estado</th>
      <th class="align-middle text-center">Documento</th>
      <th class="align-middle text-center">Edificio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @communications %>
  </tbody>
</table>

<br>
